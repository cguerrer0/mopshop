<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.2//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mopelo.dao.UserDao">

  <cache />
  
  
  <insert id="insert" 
  		  parameterType="com.mopelo.domain.User" 
  		  useGeneratedKeys="true" 
  		  keyColumn="ID" 
  		  keyProperty="id"
  		  >
  	INSERT INTO 
  		USER (login,password,date,lastAccess,typeUser)
  	VALUES 
  		(#{login},#{password},#{date},#{lastAccess},#{userType})
  	<!-- Generation of primary key. Database dependent -->
   	<selectKey keyProperty="id" resultType="long" order="AFTER"> 
         SELECT LAST_INSERT_ID();
    </selectKey> 
  </insert>
  
  <select id="getAll" resultType="com.mopelo.domain.User">
    SELECT
      ID AS id,
      LAST_NAME AS lastName,
      FIRST_NAME AS firstName
    FROM HELLO_WORLD
  </select>
  
<!--   update -->
  
  
<!--   deleteById -->
  
</mapper>